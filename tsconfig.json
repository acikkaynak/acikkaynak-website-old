{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "experimentalDecorators": true,
        "removeComments": true,
        "newLine": "LF",
        "rootDirs": [
            "src/"
        ],
        "sourceMap": true,
        "allowJs": true,
        "outDir": "dist/"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
